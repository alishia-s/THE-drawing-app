<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="79dp"
        android:background="@drawable/main_screen_title_background"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical|center_horizontal"
        android:letterSpacing="0.06"
        android:scaleY="0.95"
        android:text="Past Projects"
        android:textAllCaps="true"
        android:textColor="#D5EFF7"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/moveLeft"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_weight="1" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="308dp"
            android:layout_height="301dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scrollbars="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/moveRight"
            android:layout_width="41dp"
            android:layout_height="103dp" />

    </LinearLayout>

    <Button
        android:id="@+id/cloudBackup"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:text="Button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newDrawing"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="@drawable/main_screen_new_button_background"
        android:padding="0dp"
        />

</LinearLayout>